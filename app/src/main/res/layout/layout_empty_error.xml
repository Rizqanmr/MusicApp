<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clEmptyError"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/emptyErrorImage"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp240"
        android:layout_marginHorizontal="@dimen/dp32"
        android:scaleType="fitCenter"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/vector_error"
        app:layout_constraintBottom_toTopOf="@id/tvEmptyErrorTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmptyErrorTitle"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:textAlignment="center"
        android:textSize="@dimen/sp24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/emptyErrorImage"
        app:layout_constraintStart_toStartOf="@id/emptyErrorImage"
        app:layout_constraintTop_toBottomOf="@id/emptyErrorImage"
        tools:text="Failed to load" />

</androidx.constraintlayout.widget.ConstraintLayout>